<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialLoginAzure.MainPage"
              Title="{Binding Title}">

    <ScrollView>
        <StackLayout
            Padding="60"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand">

            <Label Text="Id do Usuario" TextColor="Black" FontSize="Small"></Label>
            <Label Text="{Binding UserId}" TextColor="Gray" FontSize="Medium"></Label>
            <Label Text="Token do Provedor" TextColor="Black" FontSize="Small"></Label>
            <Label Text="{Binding Token}" TextColor="Gray" FontSize="Medium"></Label>

        </StackLayout>
        
        
    </ScrollView>

</ContentPage>