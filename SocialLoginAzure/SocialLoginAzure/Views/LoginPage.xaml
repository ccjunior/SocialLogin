<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialLoginAzure.Views.LoginPage"
             Title="{Binding Title}">

    <StackLayout 
        HorizontalOptions="Center"
        VerticalOptions="CenterAndExpand">
        
        <Label Text="Meu App Social" TextColor="Black" Font="medium"/>
        <Button Command="{Binding LoginCommand}" Text="Logar Com Facebook"
                BackgroundColor="Blue" Font="medium" TextColor="White" />

    </StackLayout>
	
</ContentPage>